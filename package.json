{
  "name": "streamdeck-webthings",
  "version": "1.0.0",
  "description": "A Stream Deck plugin to control WebThings Framework devices.",
  "main": "src/pi.html",
  "scripts": {
    "build": "npm run build:pi && npm run build:setup && npm run build:plugin",
    "build:setup": "parcel build src/setup/index.html -d Sources/org.mozilla.wot.sdPlugin/setup/ --public-url ./",
    "build:pi": "parcel build src/pi/index.html -d Sources/org.mozilla.wot.sdPlugin/pi/ --public-url ./",
    "build:plugin": "parcel build src/plugin/index.html -d Sources/org.mozilla.wot.sdPlugin/plugin/ --public-url ./",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GarthDB/streamdeck-webthings.git"
  },
  "keywords": [
    "streamdeck"
  ],
  "author": "Garth Braithwaite <garthdb@gmail.com> (http://garthdb.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/GarthDB/streamdeck-webthings/issues"
  },
  "homepage": "https://github.com/GarthDB/streamdeck-webthings#readme",
  "devDependencies": {
    "@vue/component-compiler-utils": "^3.1.1",
    "parcel-bundler": "^1.12.4",
    "pug": "^2.0.4",
    "sass": "^1.24.5",
    "typescript": "^3.7.5",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "vuex": "^3.1.2"
  }
}
